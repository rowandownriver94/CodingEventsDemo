<h1>Add Event</h1>

<form method="post" action="/events/edit">
    <div class="form-group">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" value="@ViewBag.editEvent.Name"/>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input id="name" name="description" type="text" value="@ViewBag.editEvent.Description"/>
    </div>
    <input type="hidden" value="@ViewBag.editEvent.Id" name="eventId" />
    <input type="submit" value="Edit Event" />
</form>
